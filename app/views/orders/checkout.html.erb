

<h4 class="center" style="background-color:orange;margin-top:0;padding:1em;" >CHECKOUT</h4>
<div class="container ">

    <%= form_for @order, :url => checkout_path, :method => "patch" do |f| %>

    <div class="row ">
    <div class="input-field col s4 push-s2">
    <%= f.label :first_name, 'First Name' %>
    <%= f.text_field :first_name %> 
    </div>

    <div class="input-field col s4 push-s2">
    <%= f.label :last_name, 'Last Name' %>
    <%= f.text_field :last_name %>
    </div>
    </div>

    <div class="row ">
    <div class="input-field col s4 push-s2">
    <%= f.label :billing_address1, 'Address Line 1' %>
    <%= f.text_field :billing_address1 %>
    </div>

    <div class="input-field col s4 push-s2">
    <%= f.label :billing_address2, 'Address Line 2' %>
    <%= f.text_field :billing_address2 %>
    </div>
    </div>

    <div class="row ">
    <div class="input-field col s4 push-s2">
    <%= f.label :billing_address3, 'City' %>
    <%= f.text_field :billing_address3 %>
    </div>

    <div class="input-field col s4 push-s2">
    <%= f.label :billing_address4, 'State' %>
    <%= f.text_field :billing_address4 %>
    </div>
    </div>

    <div class="row ">
    <div class="input-field col s4 push-s2">
    <%= f.label :billing_postcode, 'Postcode' %>
    <%= f.text_field :billing_postcode %>
    </div>

    <div class="input-field col s4 push-s2">
    <%= f.label :billing_country_id, 'Country' %>
    <%= f.text_field :billing_country_id %>
    </div>
    </div>

    <div class="row ">
    <div class="input-field col s4 push-s2">
    <%= f.label :email_address, 'Email' %>
    <%= f.text_field :email_address %>
    </div>

    <div class="input-field col s4 push-s2">
    <%= f.label :phone_number, 'Phone' %>
    <%= f.text_field :phone_number %>
    </div>
    </div>

<!--     <div class="center">
        <a href="" class="waves-effect waves-light btn-large">CHECKOUT</a>
    </div> -->

    <% f.collection_select :billing_country_id, Shoppe::Country.ordered, :id, :name, :include_blank => true %>
    <div class="center"><%= f.submit 'Continue' %></div>
    
    </div>

  
  <% end %>

  </div>
